<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    tools:context="com.example.interactivity.Profileactivity">

    <TextView
        android:id="@+id/txt3"
        android:layout_width="395dp"
        android:layout_height="100dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="21dp"
        android:background="@android:color/holo_orange_light"
        android:gravity="center_vertical|center_horizontal"
        android:hint="DISPLAY"
        android:text="TextView"
        android:textSize="20sp"
        app:layout_constraintHorizontal_bias="0.736"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/rgrp"
        android:layout_width="140dp"
        android:layout_height="170dp"
        android:layout_marginTop="49dp"
        app:layout_constraintTop_toBottomOf="@+id/txt3"
        android:layout_marginLeft="101dp"
        app:layout_constraintLeft_toLeftOf="parent">

        <RadioButton
            android:id="@+id/rb1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/holo_blue_light"
            android:text="CLASSICAL"
            tools:layout_editor_absoluteX="133dp"
            tools:layout_editor_absoluteY="186dp" />

        <RadioButton
            android:id="@+id/rb2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:layout_weight="1"
            android:background="@android:color/holo_blue_light"
            android:text="BOLLYWOOD"
            app:layout_constraintLeft_toLeftOf="@+id/rb1"
            app:layout_constraintTop_toBottomOf="@+id/rb1" />

        <RadioButton
            android:id="@+id/rb3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="22dp"
            android:layout_weight="1"
            android:background="@android:color/holo_blue_light"
            android:text="hip-hop"
            app:layout_constraintLeft_toLeftOf="@+id/rb2"
            app:layout_constraintTop_toBottomOf="@+id/rb2" />
    </RadioGroup>

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:text="BACK"
        android:layout_marginTop="44dp"
        app:layout_constraintTop_toBottomOf="@+id/rgrp"
        android:layout_marginLeft="26dp"
        app:layout_constraintLeft_toLeftOf="@+id/rgrp" />

</android.support.constraint.ConstraintLayout>
